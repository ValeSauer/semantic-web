        <!-- Related Projects Row -->
        <div class="row">

            <div class="col-lg-12">
                <h3 class="page-header">Welcher Berg wird hier dargestellt?</h3>
            </div>
            
            <ul>
            
            <script type="text/javascript">
                
                //Auswertung
                
                function evaluation(a){
                    if (a == aw4){
                            document.getElementById("aw4").style.color="#00ff00";
                            setTimeout(function(){
                                location.reload();    
                            },3000);
                    }else{
                            document.getElementById("aw4").style.color="#00ff00";
                        
                            if(a == aw1){
                                document.getElementById("aw1").style.color="#ff0000";
                            }
                            if(a == aw2){
                                document.getElementById("aw2").style.color="#ff0000";
                            }
                            if(a == aw3){
                                document.getElementById("aw3").style.color="#ff0000";
                            }
                        
                            setTimeout(function(){
                                location.reload();    
                            },3000);    
                    }
                }
                
                //Antwortmöglichkeiten in zufälliger Reihenfolge:
                
                var aw1 = "{{aw1}}"
                var aw2 = "{{aw2}}"
                var aw3 = "{{aw3}}"
                var aw4 = "{{name}}"
                               
                var contents = new Array()
                contents[0]='<div class="col-sm-3 col-xs-6"><div class="container"><ul><li onclick="evaluation(aw1)"><input type="radio" id="a-option" name="answer" /><label for "a-option" id="aw1">{{aw1}}</label><div class="check"><div class="inside"></div></div></li></ul></div></div>'
                contents[1]='<div class="col-sm-3 col-xs-6"><div class="container"><ul><li onclick="evaluation(aw2)" ><input type="radio" id="b-option" name="answer" /><label for "b-option" id="aw2">{{aw2}}</label><div class="check"><div class="inside"></div></div></li></ul></div></div>'
                contents[2]='<div class="col-sm-3 col-xs-6"><div class="container"><ul><li onclick="evaluation(aw3)"><input type="radio" id="c-option" name="answer" /><label for "c-option" id="aw3">{{aw3}}</label><div class="check"><div class="inside"></div></div></li></ul></div></div>'
                contents[3]='<div class="col-sm-3 col-xs-6"><div class="container"><ul><li onclick="evaluation(aw4")"><input type="radio" id="d-option" name="answer" /><label for "d-option" id="aw4">{{name}}</label><div class="check"><div class="inside"></div></div></li></ul></div></div>'
                
                var i=0
                var random
                
                while(i<contents.length){
                    random=Math.floor(Math.random()*contents.length)
                    if (contents[random] !="selected"){
                        document.write(contents[random])
                        contents[random]="selected"
                        i++
                    }
                }
            </script>
            </ul>
            
